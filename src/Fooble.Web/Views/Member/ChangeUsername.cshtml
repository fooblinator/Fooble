@model IMemberChangeUsernameViewModel

@{
    ViewBag.DisplayName = "Change Username";
}

<form method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CurrentPassword)
        @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CurrentPassword, String.Empty, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NewUsername)
        @Html.EditorFor(model => model.NewUsername, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NewUsername, String.Empty, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

<br />
<p>@Html.ActionLink("Back to Detail", "Detail", new { id = Model.Id })</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
