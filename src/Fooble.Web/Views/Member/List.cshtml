@model IMemberListReadModel

@{
    ViewBag.DisplayName = "List";
}

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th colspan="3">Member</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Members)
                {
                    <tr>
                        <td><canvas width="40" height="40" data-jdenticon-hash="@item.AvatarData"></canvas></td>
                        <td>@Html.DisplayFor(modelItem => item.Nickname)</td>
                        <td>@Html.ActionLink("Detail", "Detail", new { id = item.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th colspan="2">Statistics</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Member Count</td>
                    <td>@Model.MemberCount</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.ActionLink("Register", "Register")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jdenticon")
}
