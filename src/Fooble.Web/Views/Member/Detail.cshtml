@model IMemberDetailReadModel

@{
    ViewBag.DisplayName = "Detail";
}

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th colspan="2">Details</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Id)</td>
                    <td>@Html.DisplayFor(model => model.Id)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Username)</td>
                    <td>@Html.DisplayFor(model => model.Username)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Nickname)</td>
                    <td>@Html.DisplayFor(model => model.Nickname)</td>
                </tr>
                <tr>
                    <td>Avatar</td>
                    <td><canvas width="80" height="80" data-jdenticon-hash="@Model.AvatarData"></canvas></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th colspan="2">Statistics</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Registered)</td>
                    <td>@Html.DisplayFor(model => model.Registered)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.PasswordChanged)</td>
                    <td>@Html.DisplayFor(model => model.PasswordChanged)</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.ActionLink("Change Username", "ChangeUsername", new { id = Model.Id })</td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Change Password", "ChangePassword", new { id = Model.Id })</td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Change Email", "ChangeEmail", new { id = Model.Id })</td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Change Other", "ChangeOther", new { id = Model.Id })</td>
                </tr>
                <tr>
                    <td>@Html.ActionLink("Deactivate", "Deactivate", new { id = Model.Id })</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<p>@Html.ActionLink("Back to List", "List")</p>

@section Scripts {
    @Scripts.Render("~/bundles/jdenticon")
}
